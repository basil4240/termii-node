{
  "name": "termii-node",
  "version": "1.0.0",
  "description": "Unofficial TypeScript/JavaScript SDK for Termii API - Send SMS, verify phone numbers, and manage communications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "example": "ts-node",
    "example:messaging": "ts-node examples/messaging.examples.ts",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "termii",
    "sms",
    "otp",
    "verification",
    "messaging",
    "whatsapp",
    "api",
    "sdk",
    "nigeria",
    "africa"
  ],
  "author": "Mc-Ben BA-Ana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/basil4240/termii-node.git"
  },
  "bugs": {
    "url": "https://github.com/basil4240/termii-node/issues"
  },
  "homepage": "https://github.com/basil4240/termii-node#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
